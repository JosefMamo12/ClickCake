<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    android:layoutDirection="rtl"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/text_view_supplier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@id/text_view_supplier_location"
            android:text="name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/text_view_supplier_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_supplier_name"
            android:text="description"

            />
        <TextView
            android:id="@+id/text_view_supplier_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="location"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>